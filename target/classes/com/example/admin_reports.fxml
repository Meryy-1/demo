<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.AdminReportsController"
            stylesheets="@styles.css">

    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #3498db; -fx-padding: 20px;">
            <Label text="View Reports"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="Back to Admin" onAction="#handleBack"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px 15px; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 40px;">
            <HBox spacing="20" alignment="CENTER">
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="From Date:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <DatePicker fx:id="fromDatePicker" promptText="Select start date"/>
                </VBox>
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="To Date:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <DatePicker fx:id="toDatePicker" promptText="Select end date"/>
                </VBox>
                <Button fx:id="filterButton" text="Filter Reports" onAction="#handleFilter"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-cursor: hand;"/>
            </HBox>

            <Label fx:id="totalClientsLabel" text="Total Clients: 0"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="totalOrdersLabel" text="Total Orders: 0"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="totalRevenueLabel" text="Total Revenue: $0.00"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="mostOrderedItemLabel" text="Most Ordered Item: None"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" style="-fx-padding: 10px; -fx-background-color: #ecf0f1;">
            <Label fx:id="statusLabel" text="Loading reports..."
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        </VBox>
    </bottom>

</BorderPane>