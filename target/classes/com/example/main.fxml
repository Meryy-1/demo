<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.example.MainController" stylesheets="@styles.css" styleClass="root">
    
    <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: transparent; -fx-background-color: transparent;">
        <StackPane minHeight="480" minWidth="500">
            <VBox alignment="CENTER" spacing="25" styleClass="main-container" maxWidth="500" style="-fx-padding: 10px;">
        <!-- Restaurant Title -->
        <VBox alignment="CENTER" spacing="8">
            <Label text="Restaurant" styleClass="restaurant-title"/>
            <Label text="Management System" styleClass="restaurant-subtitle"/>
        </VBox>
        
        <Separator styleClass="title-separator"/>
        
        <!-- Login Type Selection -->
        <VBox spacing="15" alignment="CENTER" styleClass="selection-container">
            <Label text="Select Login Type" styleClass="selection-label"/>
            
            <!-- Client Option Button -->
            <Button fx:id="clientOptionBtn" text="ðŸ‘¤  Client Login" 
                    onAction="#toggleClientSection" styleClass="option-btn"/>
            
            <!-- Client Input Section (Initially Hidden) -->
            <VBox fx:id="clientSection" spacing="15" styleClass="input-section" managed="false" visible="false" alignment="CENTER">
                <VBox spacing="8" maxWidth="300">
                    <Label text="Name" styleClass="field-label"/>
                    <TextField fx:id="clientNameField" promptText="Enter your name" styleClass="text-field"/>
                </VBox>
                <VBox spacing="8" maxWidth="300">
                    <Label text="Number" styleClass="field-label"/>
                    <TextField fx:id="clientNumberField" promptText="Enter your number" styleClass="text-field"/>
                </VBox>
                <Button fx:id="clientLoginBtn" text="âœ“  Enter" onAction="#handleClientLogin" styleClass="submit-btn"/>
            </VBox>
            
            <!-- Admin Option Button -->
            <Button fx:id="adminOptionBtn" text="ðŸ”‘  Admin Login" 
                    onAction="#toggleAdminSection" styleClass="option-btn"/>
            
            <!-- Admin Input Section (Initially Hidden) -->
            <VBox fx:id="adminSection" spacing="15" styleClass="input-section" managed="false" visible="false" alignment="CENTER">
                <VBox spacing="8" maxWidth="300">
                    <Label text="Admin ID" styleClass="field-label"/>
                    <TextField fx:id="adminIdField" promptText="Enter admin ID" styleClass="text-field"/>
                </VBox>
                <VBox spacing="8" maxWidth="300">
                    <Label text="Password" styleClass="field-label"/>
                    <PasswordField fx:id="adminPasswordField" promptText="Enter password" styleClass="text-field"/>
                </VBox>
                <Button fx:id="adminLoginBtn" text="âœ“  Login" onAction="#handleAdminLogin" styleClass="submit-btn"/>
            </VBox>
        </VBox>
        
        <!-- Status Label -->
        <Label fx:id="statusLabel" text="" styleClass="status-label"/>
        
            </VBox>
        </StackPane>
    </ScrollPane>
    
</StackPane>