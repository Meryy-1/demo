<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.AdminClientsController"
            stylesheets="@styles.css">

    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #3498db; -fx-padding: 20px;">
            <Label text="Manage Clients"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="Back to Admin" onAction="#handleBack"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px 15px; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 20px;">
            <TableView fx:id="clientsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                    <TableColumn fx:id="numberColumn" text="Number" prefWidth="150" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" style="-fx-padding: 10px; -fx-background-color: #ecf0f1;">
            <Label fx:id="statusLabel" text="Loading clients..."
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        </VBox>
    </bottom>

</BorderPane>