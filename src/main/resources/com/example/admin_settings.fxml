<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.AdminSettingsController"
            stylesheets="@styles.css">

    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #3498db; -fx-padding: 20px;">
            <Label text="Settings"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="Back to Admin" onAction="#handleBack"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px 15px; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-padding: 20px;">
            <VBox spacing="30" style="-fx-padding: 20px;">

                <!-- Admin Information Section -->
                <VBox spacing="15">
                    <Label text="Admin Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Separator/>

                    <GridPane hgap="15" vgap="10" style="-fx-padding: 0 20px;">
                        <Label text="Admin Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="adminNameLabel" text="Loading..." GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                        <Label fx:id="adminRoleLabel" text="Administrator" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </GridPane>
                </VBox>

                <!-- Security Section -->
                <VBox spacing="15">
                    <Label text="Security" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Separator/>

                    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 20px;">
                        <Button fx:id="changePasswordButton" text="Change Password"
                                onAction="#handleChangePassword"
                                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px 15px; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>

                <!-- Application Info Section -->
                <VBox spacing="15">
                    <Label text="Application Info" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Separator/>

                    <GridPane hgap="15" vgap="10" style="-fx-padding: 0 20px;">
                        <Label text="Version:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="versionLabel" text="1.0.0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    </GridPane>
                </VBox>

                <!-- Logout Button -->
                <VBox spacing="15" alignment="CENTER">
                    <Separator/>
                    <Button fx:id="logoutButton" text="Logout"
                            onAction="#handleLogout"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12px 25px; -fx-cursor: hand;"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <VBox alignment="CENTER" style="-fx-padding: 10px; -fx-background-color: #ecf0f1;">
            <Label fx:id="statusLabel" text="Settings loaded successfully"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        </VBox>
    </bottom>

</BorderPane>