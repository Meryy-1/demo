<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.example.ClientController" stylesheets="@styles.css" styleClass="root">
    
    <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: transparent; -fx-background-color: transparent;">
        <StackPane minHeight="480" minWidth="600">
            <VBox alignment="TOP_CENTER" spacing="25" styleClass="main-container" maxWidth="600" style="-fx-padding: 10px;">
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Button text="â† Logout" onAction="#handleLogout" styleClass="submit-btn" 
                    style="-fx-background-color: #6c757d;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <VBox alignment="CENTER_RIGHT">
                <Label fx:id="clientNameLabel" text="Welcome, Client" styleClass="restaurant-title" 
                       style="-fx-font-size: 28px;"/>
                <Label fx:id="clientNumberLabel" text="Number: N/A" styleClass="field-label" 
                       style="-fx-text-fill: #6c757d;"/>
            </VBox>
        </HBox>
        
        <Separator styleClass="title-separator"/>
        
        <!-- Client Dashboard -->
        <VBox alignment="CENTER" spacing="20" styleClass="selection-container">
            <Label text="Client Dashboard" styleClass="selection-label"/>
            
            <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20px;">
                <!-- Menu Section -->
                <Button text="ðŸ“‹ View Menu" styleClass="option-btn" 
                        onAction="#handleViewMenu" prefWidth="300"/>
                
                <!-- Orders Section -->
                <Button text="ðŸ›’ My Orders" styleClass="option-btn" 
                        onAction="#handleMyOrders" prefWidth="300"/>
                
                <!-- Reservations Section -->
                <Button text="ðŸ“… Make Reservation" styleClass="option-btn" 
                        onAction="#handleReservation" prefWidth="300"/>
            </VBox>
        </VBox>
        
        <!-- Status Label -->
        <Label fx:id="statusLabel" text="" styleClass="status-label"/>
        
            </VBox>
        </StackPane>
    </ScrollPane>
    
</StackPane>
