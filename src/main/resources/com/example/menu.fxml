<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.MenuController"
            fitToWidth="true">

<VBox alignment="CENTER" 
      spacing="20"
      style="-fx-padding: 20px;">
    
    <StackPane maxWidth="Infinity" prefHeight="250" style="-fx-background-color: #333;">
        <ImageView fitHeight="250" preserveRatio="true" style="-fx-opacity: 0.9;">
            <Image url="@images/bg-image.jpg"/>
        </ImageView>
        <Label text="Our Menu : " style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0);"/>
    </StackPane>
    
    <FlowPane hgap="20" vgap="20" alignment="CENTER">
        
        <VBox spacing="10" maxWidth="350" style="-fx-background-color: white; -fx-padding: 15px; -fx-border-color: gray;">
            <ImageView fitWidth="200" fitHeight="150" preserveRatio="true">
                <Image url="@images/spicy_potato.jpg"/>
            </ImageView>
            <Label text="Spicy Potato" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Delicious spicy potato dish"/>
            <Label text="Price: $12.00" style="-fx-font-weight: bold;"/>
            <Button text="Add to Cart" onAction="#handleAddItem"/>
        </VBox>
        
        <VBox spacing="10" maxWidth="350" style="-fx-background-color: white; -fx-padding: 15px; -fx-border-color: gray;">
            <ImageView fitWidth="200" fitHeight="150" preserveRatio="true">
                <Image url="@images/pasta.jpg"/>
            </ImageView>
            <Label text="Pasta" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Delicious pasta with sauce"/>
            <Label text="Price: $15.00" style="-fx-font-weight: bold;"/>
            <Button text="Add to Cart" onAction="#handleAddItem"/>
        </VBox>
        
        <VBox spacing="10" maxWidth="350" style="-fx-background-color: white; -fx-padding: 15px; -fx-border-color: gray;">
            <ImageView fitWidth="200" fitHeight="150" preserveRatio="true">
                <Image url="@images/garlic_bread.jpg"/>
            </ImageView>
            <Label text="Garlic Bread" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Fresh baked garlic bread"/>
            <Label text="Price: $8.00" style="-fx-font-weight: bold;"/>
            <Button text="Add to Cart" onAction="#handleAddItem"/>
        </VBox>
        
    </FlowPane>
    
    <Button text="Back" onAction="#handleBack"/>
    
    <Label fx:id="statusLabel" text=""/>
    
</VBox>

</ScrollPane>
